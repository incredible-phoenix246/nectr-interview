# =============================================================================
# NECTR Smart Contract Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Private key for contract deployment (KEEP SECRET!)
# This should be the private key of the account you want to deploy from
# NEVER commit this to version control!
PRIVATE_KEY="your_private_key_here"

# PolygonScan API Key for contract verification
# Get this from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY="your_polygonscan_api_key_here"

# =============================================================================
# NETWORK RPC ENDPOINTS
# =============================================================================

# Polygon Amoy Testnet (Chain ID: 80002)
AMOY_RPC_URL="https://rpc-amoy.polygon.technology"

# Polygon Mainnet (Chain ID: 137)
POLYGON_RPC_URL="https://polygon-rpc.com"

# Mumbai Testnet (Deprecated - use Amoy instead)
MUMBAI_RPC_URL="https://rpc-mumbai.maticvigil.com"

# Ethereum Mainnet (Chain ID: 1)
MAINNET_RPC_URL="https://eth.llamarpc.com"

# Ethereum Sepolia Testnet (Chain ID: 11155111)
SEPOLIA_RPC_URL="https://ethereum-sepolia-rpc.publicnode.com"

# Local Development
LOCALHOST_RPC_URL="http://127.0.0.1:8545"

# =============================================================================
# CUSTOM RPC PROVIDERS (Optional)
# =============================================================================

# Alchemy (recommended for production)
# AMOY_RPC_URL="https://polygon-amoy.g.alchemy.com/v2/your-api-key"
# POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/your-api-key"
# MAINNET_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/your-api-key"

# Infura
# POLYGON_RPC_URL="https://polygon-mainnet.infura.io/v3/your-project-id"
# MAINNET_RPC_URL="https://mainnet.infura.io/v3/your-project-id"

# =============================================================================
# DEPLOYMENT PARAMETERS
# =============================================================================

# Token Configuration
TOKEN_NAME="NECTR Token"
TOKEN_SYMBOL="NECTR"
TOTAL_SUPPLY="1000000"
STAKING_APY="5"

# Gas Configuration
GAS_PRICE_GWEI="30"
GAS_LIMIT="3000000"

# =============================================================================
# ETHERSCAN API KEYS (For multi-chain verification)
# =============================================================================

# Use the same API key for all Polygon networks
ETHERSCAN_API_KEY_POLYGON="${POLYGONSCAN_API_KEY}"

# For Ethereum networks, get API key from: https://etherscan.io/apis
# ETHERSCAN_API_KEY_ETHEREUM="your_etherscan_api_key_here"

# =============================================================================
# FOUNDRY CONFIGURATION OVERRIDES (Optional)
# =============================================================================

# Override default optimizer runs for deployment
# OPTIMIZER_RUNS="1000"

# Enable/disable via-ir compilation
# VIA_IR="true"

# Custom cache directory
# FORGE_CACHE_PATH="./cache"